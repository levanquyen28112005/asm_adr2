<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm sản phẩm"
        android:id="@+id/kkkk"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#F44336"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name_add"
            android:text="Tên sản phẩm:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:id="@+id/et_name_add"
            android:height="45dp"
            android:background="@drawable/custom_input_login"
            android:layout_below="@+id/tv_name_add"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cost_add"
            android:text="Giá bán:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_cost_add"
            android:paddingLeft="10dp"
            android:height="45dp"
            android:background="@drawable/custom_input_login"
            android:layout_below="@+id/tv_cost_add"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_quantity_add"
            android:text="Số lượng:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_quantity_add"
            android:height="45dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_input_login"
            android:layout_below="@+id/tv_quantity_add"/>
    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_add"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:background="@drawable/custom_btn_bgr_yl_boder_black"
        android:text="Thêm"/>
</LinearLayout>