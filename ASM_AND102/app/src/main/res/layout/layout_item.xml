<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:padding="8dp"
            android:background="@drawable/background_sanpham"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/product"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_sanpham"
                android:id="@+id/iv_item"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_below="@+id/iv_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản Phẩm Mẫu"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:id="@+id/tv_name"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá Sản Phẩm"
                    android:textSize="16sp"
                    android:id="@+id/tv_cost"
                    android:gravity="bottom"
                    android:layout_above="@id/tv_quantity"
                    android:layout_below="@+id/tv_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Lượng"
                    android:textSize="16sp"
                    android:id="@+id/tv_quantity"
                    android:layout_above="@id/tv_edit"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_edit"
                    android:text="@string/tv_edit"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="#03A9F4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_delete"
                    android:layout_marginLeft="20dp"
                    android:text="@string/tv_delete"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/tv_edit"
                    android:textColor="#F44336"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>